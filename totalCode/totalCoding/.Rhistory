# POS JSON loader（优先尝试 project_key.json，再尝试替换 result->results 的文件名）
# Example: project_key = "lsm_result0" -> try "lsm_result0.json", then "lsm_results0.json"
load_pos_json <- function(project_key) {
candidate1 <- paste0(project_key, ".json")
candidate2 <- paste0(gsub("result", "results", project_key), ".json")
json_path <- if (file.exists(candidate1)) candidate1 else if (file.exists(candidate2)) candidate2 else NULL
if (is.null(json_path)) return(NULL)
js <- tryCatch(fromJSON(readChar(json_path, file.info(json_path)$size)), error = function(e) NULL)
if (is.null(js)) return(NULL)
# Expect js to be a flat key-value numeric list for POS features
data.frame(
feature = names(js),
value = as.numeric(unlist(js)),
project = project_key,
stringsAsFactors = FALSE
)
}
